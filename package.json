{
  "name": "angular-boilerplate",
  "version": "1.0.0",
  "author": "Alessandro Tagliapietra <tagliapietra.alessandro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf node_modules doc dist && npm cache clean",
    "clean-install": "npm run clean && npm install",
    "clean-start": "npm run clean-install && npm start",
    "watch": "webpack --watch --progress --profile",
    "build": "rimraf dist && webpack --progress --profile --bail",
    "server": "webpack-dev-server --inline --port 3000",
    "webdriver-update": "webdriver-manager update",
    "webdriver-start": "webdriver-manager start",
    "lint": "tslint --force \"src/**/*.ts\"",
    "e2e": "protractor",
    "e2e-live": "protractor --elementExplorer",
    "pretest": "npm run lint",
    "test": "karma start",
    "posttest": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html -t html",
    "test-watch": "karma start --no-single-run --auto-watch",
    "ci": "npm run e2e && npm run test",
    "docs": "typedoc --options typedoc.json src/app/app.component.ts",
    "start": "npm run server",
    "start:hmr": "npm run server -- --hot"
  },
  "devDependencies": {
    "@angular/compiler-cli": "~4.0.0",
    "@angularclass/hmr-loader": "^3.0.2",
    "@ngtools/webpack": "^1.3.1",
    "@types/node": "^7.0.22",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "~6.7.0",
    "awesome-typescript-loader": "^3.1.3",
    "bootstrap-loader": "^2.0.0",
    "css-loader": "~0.28.0",
    "exports-loader": "~0.6.0",
    "extract-text-webpack-plugin": "~2.1.0",
    "file-loader": "~0.11.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "~4.5.0",
    "postcss-loader": "~1.3.0",
    "raw-loader": "~0.5.0",
    "resolve-url-loader": "^2.0.2",
    "rimraf": "~2.6.0",
    "sass-loader": "~6.0.0",
    "style-loader": "~0.16.0",
    "tslint": "^5.1.0",
    "tslint-loader": "^3.5.2",
    "typescript": "~2.2.0",
    "url-loader": "~0.5.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/http": "^4.0.2",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "angular2-jwt": "^0.2.2",
    "bootstrap": "v4.0.0-alpha.6",
    "core-js": "~2.4.0",
    "rxjs": "~5.3.0",
    "webfontloader": "^1.6.27",
    "zone.js": "~0.8.0"
  }
}
