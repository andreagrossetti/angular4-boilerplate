    "favicons-webpack-plugin": "^0.0.7",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "local-web-server": "^2.5.1",
    "node-sass": "^4.7.2",
